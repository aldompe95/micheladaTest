<div class="brand-form">
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
        <img src="https://pbs.twimg.com/profile_images/675419907736002560/N0T5A-_J.png" class="img-responsive"></img>
        <h2>Brand</h2>
        <%= form_for @brand do |f| %>
          <div class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Save', class: "btn btn-success" %>
            <%= link_to 'Nevermind', root_path, class: 'btn btn-warning' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
